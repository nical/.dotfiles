###############
### Aliases ###
###############

# Typographic errors
alias sl="ls"
alias LS="ls"
alias vi="vim"
alias search="aptitude search"
alias up="sudo aptitude update && sudo aptitude safe-upgrade"
alias install="sudo aptitude install"
alias search="aptitude search"
alias remove="sudo aptitude purge"

# Fixed params
alias ls="ls -h --color=auto"
alias grep="grep --color=auto"
alias ssh="ssh -X"

# vim
alias gv="gvim --remote"

# New commands
alias ll="ls -l"
alias la="ls -al"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."
alias psf="ps fux | grep -v grep | grep -v ps"

alias profile="valgrind --tool=callgrind "

alias sublime='~/bin/SublimeText/sublime_text'
#alias ack='ack-grep'
alias make='make -j4'
alias suitup='sudo'
alias cdkiwi='cd ~/Dev/kiwi/'
alias gitcommit='git commit -a -m'
alias linecount='sloccount . | grep Physical'
alias open='gnome-open'
alias ccat='pygmentize'

alias compresspdf='gs -dBATCH -dNOPAUSE -q -sDEVICE=pdfwrite -sOutputFile=compressed_out.pdf'
alias valgrindprofile='valgrind --tool=callgrind'

alias android-connect='mtpfs -o allow_other /media/GalaxyNexus'
alias android-disconnect='fusermount -u /media/GalaxyNexus'
alias paulcx="mosh nical@50.116.3.75"

alias cpphighlight="pygmentize -l c++"

alias firefox="firefox-stable"

alias mozpatch="hg export qtip"
alias moztry='hg qnew -m "try: -b do -p all -u all -t none"'
alias qseries='hg qseries -v'
alias hgdiff='hg export qtip | pygmentize -l diff'
alias hgexport='hg export qtip'
alias mq='patchqueue'
